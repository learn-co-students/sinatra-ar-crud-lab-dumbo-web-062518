<form class="" action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input type="text" name="post[name]" value="<%= @post.name %>" id="name">
  <label>Content: </label>
  <input type="text" name="post[content]" value="<%= @post.content %>" id="content">
  <input type="submit" name="" value="submit">
</form>
